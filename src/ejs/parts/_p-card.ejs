<article class="p-card">
  <div class="p-card__header">
    <figure class="p-card__figure">
      <img src="<%= cardImage %>" alt="" class="p-card__image">
    </figure>
  </div>
  <div class="p-card__body">
    <h2 class="p-card__title"><%= cardTitle %></h2>
    <p class="p-card__copy">
     説明
    </p>
    <div class="p-card__footer">
      <div class="p-card__footer-item">
        <div class="p-card__category"><%= cardCategory %></div><!-- /._p-card__category -->
        <time class="p-card__date" datetime=""><%= cardDate %></time>
      </div>
    </div>
  </div>
</article>